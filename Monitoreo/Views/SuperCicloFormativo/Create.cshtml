@model Monitoreo.Models.SuperCicloFormativo

@{
    ViewBag.Title = String.Format(Resources.T.ResourceManager.GetString("CreandoX"), Resources.T.ResourceManager.GetString("SuperCicloFormativo"));
}

<div class="panel-heading">
    <h3>@ViewBag.Title</h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            @Html.EditorFor(model => model.nombre)
            @Html.EditorFor(model => model.FechaInicio)
            @Html.EditorFor(model => model.FechaFinalizacion)
            @Html.EditorFor(model => model.CategoriaSuperCiclo)
            @Html.EditorFor(model => model.Nivel)
            @Html.EditorFor(model => model.Area)
            @Html.EditorFor(model => model.Ciclo)

            @Html.Label("Crear Actividades de Acompañamiento Automaticamente")
            @Html.CheckBox("createActividadesAcompanamiento", true)

            @*<div class="col-sm-4" style="margin-bottom:50px;">
                <input type="checkbox" name="createActividadesAcompanamiento" checked /> 
            </div>*@

          
            <div class="panel panel-default">
                <div class="panel-heading">Evaluaciones de Acompanamiento Asociadas</div>
                <div class="panel-body">
                    @if (ViewBag.Evaluaciones != null)
                    {
                        var index = 0;
                        foreach (var evaluacion in ViewBag.Evaluaciones)
                        {
                            <input value="@evaluacion.Id" type="checkbox" name="EvaluacionAcompanamiento" /> @evaluacion.Titulo
                            index++;
                        }
                    }


                </div>
            </div>
           
         




        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" value="Create" class="btn btn-primary">
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Guardar")
        </button>
        <script>
            document.write(
            '<a href="' + document.referrer + '" class="btn btn-default">' +
                '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Cancelar")' +
            '</a>');
        </script>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section Actions {
    <ul class="nav nav-stacked">
        <li>@Html.ActionLink(Resources.T.ResourceManager.GetString("Volver"), "Index")</li>
    </ul>
}

