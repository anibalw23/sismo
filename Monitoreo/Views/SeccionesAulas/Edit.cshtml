@model Monitoreo.Models.BO.SeccionAula

@{
    ViewBag.Title = String.Format(Resources.T.ResourceManager.GetString("EditandoX"), Resources.T.ResourceManager.GetString("SeccionAula"));
}

<div class="panel-heading">
    <h3>@ViewBag.Title</h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="panel-body">
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.centroId, Resources.T.ResourceManager.GetString("centroId"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.centroId, (IEnumerable<SelectListItem>)ViewBag.centroId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.centroId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.gradoId, Resources.T.ResourceManager.GetString("gradoId"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.gradoId, (IEnumerable<SelectListItem>)ViewBag.gradoId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.gradoId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SeccionId, Resources.T.ResourceManager.GetString("SeccionId"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.SeccionId, (IEnumerable<SelectListItem>)ViewBag.SeccionId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SeccionId)
                    </div>
                </div>
        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" value="Save" class="btn btn-primary">
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Guardar")
        </button>
        <script>
            document.write('<a href="' + document.referrer + '" class="btn btn-default">' +
                '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Cancelar")</a>');
        </script>
        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Borrar")
        </a>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section Actions {
    <ul class="nav nav-stacked">
        <li>@Html.ActionLink(Resources.T.ResourceManager.GetString("Volver"), "Index")</li>
    </ul>
}

