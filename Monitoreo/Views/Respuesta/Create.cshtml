@model Monitoreo.Models.BO.Respuesta

@{
    ViewBag.Title = String.Format(Resources.T.ResourceManager.GetString("CreandoX"), Resources.T.ResourceManager.GetString("Respuesta"));
}

<div class="panel-heading">
    <h3>@ViewBag.Title</h3>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="panel-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

                @Html.EditorFor(model => model.Fecha)
                @Html.EditorFor(model => model.Digitador)
                <div class="form-group">
                    @Html.LabelFor(model => model.EvaluacionId, Resources.T.ResourceManager.GetString("Evaluacion"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.EvaluacionId, (IEnumerable<SelectListItem>)ViewBag.EvaluacionId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EvaluacionId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PreguntaId, Resources.T.ResourceManager.GetString("Pregunta"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.PreguntaId, (IEnumerable<SelectListItem>)ViewBag.PreguntaId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PreguntaId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ParticipanteId, Resources.T.ResourceManager.GetString("Participante"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.ParticipanteId, (IEnumerable<SelectListItem>)ViewBag.ParticipanteId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ParticipanteId)
                    </div>
                </div>
                @Html.EditorFor(model => model.Valor)
        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" value="Create" class="btn btn-primary">
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Guardar")
        </button>
        <script>
            document.write(
            '<a href="' + document.referrer + '" class="btn btn-default">' +
                '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Cancelar")' +
            '</a>');
        </script>
    </div>
}


@section Actions {
    <ul class="nav nav-stacked">
        <li>@Html.ActionLink(Resources.T.ResourceManager.GetString("Volver"), "Index")</li>
    </ul>
}

