@model Monitoreo.Models.Acompanante

@{
    ViewBag.Title = String.Format(Resources.T.ResourceManager.GetString("CreandoX"), Resources.T.ResourceManager.GetString("Acompanante"));
}
<script src="~/Content/js/bootstrap-select.js"></script>
<link href="~/Content/css/bootstrap-select.css" rel="stylesheet" />



<div class="panel-heading">
    <h3>@ViewBag.Title</h3>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="panel-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.PersonaId, Resources.T.ResourceManager.GetString("PersonaId"), new { @class = "control-label col-sm-3" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(x => x.PersonaId, (IEnumerable<SelectListItem>)ViewBag.PersonaId, new { @class = "selectpicker", @data_live_search = "true" })
                    @Html.ValidationMessageFor(model => model.PersonaId)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.centroId, Resources.T.ResourceManager.GetString("centroId"), new { @class = "control-label col-sm-3" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(x => x.centroId, (IEnumerable<SelectListItem>)ViewBag.centroId, new { @class = "selectpicker", @data_live_search = "true" })
                    @Html.ValidationMessageFor(model => model.centroId)
                </div>
            </div>
            @Html.EditorFor(model => model.Email)               
                
            <div class="form-group">
                @Html.Label("Crear Usuario", new { @class = "control-label col-sm-3" })
                <div class="col-sm-4">                    
                    <input type="checkbox" name="CreateUser" value="1" checked="checked"> Si 
                    <input type="checkbox" name="CreateUser" value="0"> No 
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" value="Create" class="btn btn-primary">
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Guardar")
        </button>
        <script>
            document.write(
            '<a href="' + document.referrer + '" class="btn btn-default">' +
                '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Cancelar")' +
            '</a>');
        </script>
    </div>
}


@section Actions {
    <ul class="nav nav-stacked">
        <li>@Html.ActionLink(Resources.T.ResourceManager.GetString("Volver"), "Index")</li>
    </ul>
}

