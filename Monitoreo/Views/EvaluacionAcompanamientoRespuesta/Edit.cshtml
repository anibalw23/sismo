@model Monitoreo.Models.BO.EvaluacionAcompanamiento.EvaluacionAcompanamientoRespuesta

@{
    ViewBag.Title = String.Format(Resources.T.ResourceManager.GetString("EditandoX"), Resources.T.ResourceManager.GetString("EvaluacionAcompanamientoRespuesta"));
}

<div class="panel-heading">
    <h3>@ViewBag.Title</h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="panel-body">
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.EvaluacionAcompId, Resources.T.ResourceManager.GetString("EvaluacionAcompId"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.EvaluacionAcompId, (IEnumerable<SelectListItem>)ViewBag.EvaluacionAcompId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EvaluacionAcompId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.InscripcionActividadAcompanamientoId, Resources.T.ResourceManager.GetString("InscripcionActividadAcompanamientoId"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.InscripcionActividadAcompanamientoId, (IEnumerable<SelectListItem>)ViewBag.InscripcionActividadAcompanamientoId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.InscripcionActividadAcompanamientoId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ParticipanteId, Resources.T.ResourceManager.GetString("ParticipanteId"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.ParticipanteId, (IEnumerable<SelectListItem>)ViewBag.ParticipanteId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ParticipanteId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PreguntaAcompId, Resources.T.ResourceManager.GetString("PreguntaAcompId"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.PreguntaAcompId, (IEnumerable<SelectListItem>)ViewBag.PreguntaAcompId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PreguntaAcompId)
                    </div>
                </div>
                @Html.EditorFor(model => model.Valor)
                @Html.EditorFor(model => model.Fecha)
        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" value="Save" class="btn btn-primary">
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Guardar")
        </button>
        <script>
            document.write('<a href="' + document.referrer + '" class="btn btn-default">' +
                '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Cancelar")</a>');
        </script>
        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Borrar")
        </a>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section Actions {
    <ul class="nav nav-stacked">
        <li>@Html.ActionLink(Resources.T.ResourceManager.GetString("Volver"), "Index")</li>
    </ul>
}

