
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}


@{
    ViewBag.Title = "Roles";
}
<div class="panel-heading">
    <h3> @ViewBag.Title</h3>
</div>


<div class="panel-body">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Nombre del Rol
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
           @foreach (var rol in (List<Monitoreo.Models.BO.ViewModels.role.RoleVM>)ViewBag.Roles)
           {
                <tr>                   
                    <td>
                       @rol.Name
                    </td>
                    <td class="row-actions">

                        <a href="@Url.Action("EditRol", new { RolName = rol.Name })" class="btn btn-default">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Editar")
                        </a>
                        <a href="@Url.Action("DeleteRol", new { RolName = rol.Name })" class="btn btn-danger" id="DeleteUser">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Borrar")
                        </a>
                    </td>
                    
                </tr>
            }
        </tbody>

    </table>
</div>

<div class="panel-footer">
    <a href="@Url.Action("CreateRole")" class="btn btn-default">
        <span class="glyphicon glyphicon-file" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("CrearNuevo")
    </a>
</div>

@section Actions {
    <ul class="nav nav-stacked">
        <li>@Html.ActionLink(Resources.T.ResourceManager.GetString("Volver"), "Users")</li>
    </ul>
}













