@using Microsoft.AspNet.Identity
@model Monitoreo.Models.ManageUserViewModel

<p style="text-align:center;">Estas autentificado como: <strong style="color:blue;">@User.Identity.GetUserName()</strong>.</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 style="text-align:center;">Formulario para cambiar contraseña:</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.Label("Contraseña actual", new { @class = "control-label col-sm-3" })
        <div class="col-sm-4">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Contraseña nueva", new { @class = "control-label col-sm-3" })
        <div class="col-sm-4">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Confirma la nueva contraseña", new { @class = "control-label col-sm-3" })
        <div class="col-sm-4">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-sm-4">
            <input type="submit" value="Cambiar Contraseña" class="btn btn-success" />
        </div>
    </div>
}
