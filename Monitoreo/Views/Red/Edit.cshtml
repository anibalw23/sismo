@model Monitoreo.Models.Red

@{
    ViewBag.Title = String.Format(Resources.T.ResourceManager.GetString("EditandoX"), Resources.T.ResourceManager.GetString("Red"));
}

<div class="panel-heading">
    <h3>@ViewBag.Title</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="panel-body">
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

                @Html.EditorFor(model => model.Codigo)
                @Html.EditorFor(model => model.Nombre)
                <div class="form-group">
                    @Html.LabelFor(model => model.DistritoId, Resources.T.ResourceManager.GetString("Distrito"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.DistritoId, (IEnumerable<SelectListItem>)ViewBag.Distrito, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DistritoId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CentroSedeId, Resources.T.ResourceManager.GetString("CentroSede"), new { @class = "control-label col-sm-3" })
                    <div class="col-sm-4">
                        @Html.DropDownListFor(x => x.CentroSedeId, (IEnumerable<SelectListItem>)ViewBag.CentroSede, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CentroSedeId)
                    </div>
                </div>
        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" value="Save" class="btn btn-primary">
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Guardar")
        </button>
        <script>
            document.write('<a href="' + document.referrer + '" class="btn btn-default">' +
                '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Cancelar")</a>');
        </script>
        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Resources.T.ResourceManager.GetString("Borrar")
        </a>
    </div>
}


@section Actions {
    <ul class="nav nav-stacked">
        <li>@Html.ActionLink(Resources.T.ResourceManager.GetString("Volver"), "Index")</li>
    </ul>
}

